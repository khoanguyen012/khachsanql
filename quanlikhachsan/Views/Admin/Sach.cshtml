@helper Truncate(string input, int length)
{
      if (input.Length < length)
         { @input}
      else
         { @input.Substring(0, length)<text>...</text>}
}
@{
    ViewBag.Title = "Sach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÍ THÔNG TIN SÁCH</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "Themmoisach","Admin")
</p>
<table class="table" border="1">
    <tr>
        <th style="width:200px">Tên sách
            @*@Html.DisplayNameFor(model => model.First().Tensach)*@
        </th>
        @*<th style="width:200px">Đơn vị tính
            @Html.DisplayNameFor(model => model.Donvitinh)
        </th>*@
        <th style="width:100px">Đơn giá
            @*@Html.DisplayNameFor(model => model.First().Dongia)*@
        </th>
        <th style="width:300px">Mô tả
            @*@Html.DisplayNameFor(model => model.First().Mota)*@
        </th>
        <th style="width:100px">Hình minh họa
            @*@Html.DisplayNameFor(model => model.First().Hinhminhhoa)*@
        </th>
        <th style="width:120px">Tên chủ đề
            @*@Html.DisplayNameFor(model => model.First().MaCD)*@
        </th>
        <th style="width:100px">Tên nhà xuất bản
            @*@Html.DisplayNameFor(model => model.First().MaNXB)*@
        </th>
        <th style="width:150px">Ngày cập nhật
            @*@Html.DisplayNameFor(model => model.First().Ngaycapnhat)*@
        </th>
        @*<th style="width:200px">Số lượng bán
            @Html.DisplayNameFor(model => model.Soluongban)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.solanxem)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.moi)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tensach)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Donvitinh)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Dongia)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Mota)*@
            @Truncate(item.Mota,100)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Hinhminhhoa)*@
            <img src="@Url.Content("~/Hinhsanpham/"+item.Hinhminhhoa)"/>
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.MaCD)*@
            @Html.DisplayFor(modelItem => item.CHUDE.TenChuDe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NHAXUATBAN.TenNXB)
            @*@Html.DisplayFor(modelItem => item.MaNXB)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaycapnhat)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Soluongban)
        </td>*@
        @*@<td>
            @Html.DisplayFor(modelItem => item.solanxem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.moi)
        </td>*@
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Masach }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Masach }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Masach })
        </td>
    </tr>
}

</table>
